# Example environment variables for ConnectHub Server
# Copy this file to .env and fill in your own values.

# Server
PORT=4000

# CORS Origin - URL of frontend (React)
CLIENT_ORIGIN=http://localhost:5173

# JWT Secret (used later for authentication)
JWT_SECRET=your_super_secret_key_here

# Database (we'll connect in later step)
DATABASE_URL=postgresql://user:password@localhost:5432/connecthub

# Google OAuth (to be added later)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloud storage (future)
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_KEY=
CLOUD_STORAGE_SECRET=
